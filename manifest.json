{
  "name": "Performa Tracker - Voice-Enabled Fitness",
  "short_name": "Performa",
  "description": "Voice-enabled fitness tracker that quantifies your performance against ideal standards with scientific scoring, GPS tracking, and intelligent automation.",
  "version": "2.2.0",
  "start_url": "./index.html",
  "scope": "./",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#00796b",
  "background_color": "#e0f7fa",
  
  "lang": "en",
  "dir": "ltr",
  "categories": ["health", "fitness", "sports", "productivity", "lifestyle"],
  
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon-192.png",
      "sizes": "192x192", 
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png", 
      "purpose": "any"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Quick Log Exercise",
      "short_name": "Log Exercise", 
      "description": "Quickly log a new exercise entry",
      "url": "./index.html?action=log",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Start Timer",
      "short_name": "Timer",
      "description": "Start exercise timer",
      "url": "./index.html?action=timer",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Progress Charts", 
      "short_name": "Progress",
      "description": "View progress and analytics",
      "url": "./index.html?action=progress",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Start Jogging",
      "short_name": "Jog",
      "description": "Start GPS jogging tracker", 
      "url": "./index.html?action=jog",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Voice Commands",
      "short_name": "Voice",
      "description": "Voice-controlled exercise logging",
      "url": "./index.html?action=voice",
      "icons": [
        {
          "src": "icon-192.png", 
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+performa",
      "url": "./index.html?action=%s"
    }
  ],
  
  "share_target": {
    "action": "./index.html",
    "method": "GET", 
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  
  "file_handlers": [
    {
      "action": "./index.html?import=true",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  
  "permissions": [
    "microphone",
    "geolocation", 
    "camera",
    "storage-access",
    "background-sync",
    "push"
  ],
  
  "display_override": ["window-controls-overlay", "minimal-ui", "standalone", "browser"],
  
  "screenshots": [
    {
      "src": "icon-512.png",
      "sizes": "512x512", 
      "type": "image/png",
      "form_factor": "wide",
      "label": "Performa Tracker main interface with voice controls"
    },
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png", 
      "form_factor": "narrow",
      "label": "Mobile fitness tracking interface"
    }
  ]
}